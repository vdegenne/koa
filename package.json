{
	"name": "@vdegenne/koa",
	"description": "Koa tools and helpers in one package",
	"version": "0.1.2",
	"type": "module",
	"dependencies": {
		"koa": "^3.0.0",
		"@koa/router": "^13.1.0",
		"koa-static": "^5.0.0",
		"@koa/cors": "^5.0.0",
		"@types/koa": "^2.15.0",
		"@types/koa__router": "^12.0.4",
		"@types/koa-static": "^4.0.4",
		"@types/koa__cors": "^5.0.0"
	},
	"files": [
		"./lib/"
	],
	"exports": {
		".": {
			"default": "./lib/index.js",
			"types": "./lib/index.d.ts"
		}
	},
	"devDependencies": {
		"typescript": "^5.8.3",
		"wireit": "^0.14.12"
	},
	"scripts": {
		"build": "wireit"
	},
	"wireit": {
		"build": {
			"command": "tsc --pretty",
			"clean": "if-file-deleted",
			"files": [
				"./tsconfig.json",
				"./src"
			],
			"output": [
				"./lib"
			]
		}
	}
}
